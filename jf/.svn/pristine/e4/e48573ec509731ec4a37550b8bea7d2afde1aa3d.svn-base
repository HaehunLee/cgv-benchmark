@charset "UTF-8";
.backimg {
    height: 500px;
    position: absolute;
    z-index: -1;
    width: 100%;
}

.mycgv-info {
    position: absolute;
    background-image: url(http://img.cgv.co.kr/R2014/images/common/bg/bg_mycgv_info.gif);
    background-repeat: no-repeat;
    margin-top: 30px;
    margin-left: 70px;
    height: 500px;
    z-index: 1;
}

.info-contents {
    position: relative;
    z-index: 2;
    padding-left: 110px;
    padding-top: 80px;
}

.info-content2 {
    width: 670px;
    height: 65px;
    border-bottom: 1px solid #8c7652;
}

.info-content3 {
    width: 500px;
    height: 100px;
}

.info-content4 {
    margin-top: 30px;
    width: 500px;
    height: 100px;
}

.profile-photo img {
    border: 5px solid #7b6746;
    border-radius: 50%;
    width: 150px;
}

#info-name {
    font-size: 40px;
}

#info-id {
    margin-left: 20px;
    font-size: 20px;
}

#info-info {
    margin-left: 30px;
    display: block;
    font-size: 20px;
}

#horizen {
    background-color: white;
}

.info-ul ul{
    margin-left: 20px;
}

.info-ul {
    width: 1100px;
    height: 160px;
    margin-left: -220px;
}

.info-ul li {
    width: 210px;
    height: 30px;
    padding: 4px;
    padding-bottom : 25px;
    margin-bottom : 10px;
    list-style: none;
    border: 2px solid #8c7652;
    float: left;
    font-size: 100%;
    text-align : center;
}

.info-ul li:nth-child(n){
    margin-top:5px;
    margin-right: 10px;
}

#my-movie {
    font-size: 30px;
    margin-left: 60px;
}

/* content */
.my-content{
    margin-top: 20px;
    border-bottom: 2px solid black;
}

.box {
    margin-left: 45px;
    height: 200px;
    width: 1000px;
}

.box-inner{
    display: block;
    float: left;
    border: 1px solid black;
    border-style: dashed;
    height: 150px;
    width: 250px;
}

 .box-inner span{
     display: block;
     text-align: center;
     margin-top: 80px;
}

.wishlist {                                             background:url(http://img.cgv.co.kr/R2014/images/common/ico/icon_wishlist.png) no-repeat;
    background-color: #f2f0e4;
    background-position: 100px 30px;
}

.moviediary {                                             background:url(http://img.cgv.co.kr/R2014/images/common/ico/icon_moviediary.png) no-repeat;
    background-color: #f2f0e4;
    background-position: 100px 30px;
}

.watched {                                             background:url(http://img.cgv.co.kr/R2014/images/common/ico/icon_watched.png) no-repeat;
    background-color: #f2f0e4;
    background-position: 100px 30px;
}

.myqna {
    background-color: #f2f0e4;
    font-size: 20px;
}

.myqna span {
    margin-top: 55px;
}

.box-title {
        background-color: #e71a0f;
    background-position: center;
    color: #fdfcf0;
    font-size: 50px;
}

.content-box {
    border: 1px solid black;
}

.content-box-inner {
    padding: 10px;   
}

.box-table tr {
    height : 30px;
    border-bottom : 1px dashed black;
}

.box-table th{
    border-bottom : 2px solid black;
    text-align: left;
    width : 200px;
}

.third-content {
    padding-left: 60px;
}

/* modal content */
.modal-content {
	width:600px;
	height:350px;
}

.modal-body {
	height : 150px;
}


.modal-body ul{
	width:570px;
}

.modal-body ul li {
	list-style : none;
	margin-right:10px;
	margin-top : 10px;
	float:left;
}

.li-box {
	width:155px;
	border: 2px solid black;
}

.mytheater-li {
	width : 120px;
	margin-left:5px;
	display:block;
	float:left;
	font-size : 11px;
}

.remove-button {
	top: 0;
    left: inherit;
    right: 0;
	width : 20px;
	background: #e2e2e0 url(http://img.cgv.co.kr/R2014/images/common/ico/ico_close.png) no-repeat 6px 50%;
	height : 20px;
	border: 0;
    font: 0/0 a;
    zoom: 1;
    padding : 0;
}

